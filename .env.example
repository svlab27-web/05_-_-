# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here

# Database Configuration
DATABASE_URL=sqlite:///data/databases/agent4.db

# Email Configuration (optional)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Task Manager Configuration (optional)
TASK_MANAGER_TYPE=jira  # or trello, asana
TASK_MANAGER_API_KEY=your_api_key_here
TASK_MANAGER_PROJECT_KEY=your_project_key

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Cycle Intervals (in seconds)
CYCLE_1_INTERVAL=600    # 10 minutes
CYCLE_2_INTERVAL=3600   # 1 hour
CYCLE_3_INTERVAL=1800   # 30 minutes
CYCLE_4_INTERVAL=86400  # 24 hours
CYCLE_5_INTERVAL=604800 # 1 week

# Monitoring Thresholds
STUCK_REQUEST_THRESHOLD=7200  # 2 hours
CRITICAL_RESPONSE_TIME=3600   # 1 hour
HIGH_LOAD_THRESHOLD=100       # requests

# KPI Targets
TARGET_RESPONSE_TIME=3600     # 1 hour
TARGET_AUTOMATION_RATE=70     # 70%
TARGET_SUCCESS_RATE=95        # 95%
TARGET_TIME_SAVING=20         # hours per week

# Recovery Settings
MAX_RECOVERY_ATTEMPTS=3
RECOVERY_DELAY=300            # 5 minutes

# API Configuration (if using FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your_secret_key_here
